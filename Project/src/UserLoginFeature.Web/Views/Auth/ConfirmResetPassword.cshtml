@using UserLoginFeature.Application.ViewModels;
@model AuthViewModel

@{
    ViewData["Title"] = "Confirm Reset Password";
}

<div class="container-sm container-confirmresetpassword mt-3 bg-body-tertiary rounded">
    <h4 class="mt-3 mb-3 text-center">Change Password</h4>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <form class="needs-validation pb-4" asp-controller="/Auth" asp-action="ConfirmResetPassword" method="post" novalidate>
        <input asp-for="ConfirmResetPassword!.Code"/>
        <div class="form-floating mb-3">
            <input asp-for="ConfirmResetPassword!.Email" type="email" class="form-control" placeholder="name@example.com" readonly>
            <label asp-for="ConfirmResetPassword!.Email"></label>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="ConfirmResetPassword!.Password" type="password" class="form-control" placeholder="Password">
            <label asp-for="ConfirmResetPassword!.Password"></label>
            <span asp-validation-for="ConfirmResetPassword!.Password" class="text-danger text-sm-start"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="ConfirmResetPassword!.ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password">
            <label asp-for="ConfirmResetPassword!.ConfirmPassword"></label>
            <span asp-validation-for="ConfirmResetPassword!.ConfirmPassword" class="text-danger text-sm-start"></span>
        </div>
        <div class="d-flex justify-content-end">
            <button class="btn btn-primary" type="submit">Change Password</button>
        </div>
    </form>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/auth/confirm-reset-password.css" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}