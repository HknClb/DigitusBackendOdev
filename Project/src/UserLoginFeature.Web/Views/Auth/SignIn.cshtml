@using UserLoginFeature.Application.ViewModels;
@model AuthViewModel

@{
    ViewData["Title"] = "Sign In";
}

<div class="container-sm container-signin mt-3 bg-body-tertiary rounded">
    <h4 class="mt-3 mb-3 text-center">Sign In</h4>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <form class="needs-validation pb-4" asp-controller="/Auth" asp-action="SignIn" method="post" novalidate>
        <div class="form-floating mb-3">
            <input asp-for="SignIn!.Email" type="email" class="form-control" placeholder="name@example.com">
            <label asp-for="SignIn!.Email"></label>
            <span asp-validation-for="SignIn!.Email" class="text-danger text-sm-start"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="SignIn!.Password" type="password" class="form-control" placeholder="Password">
            <label asp-for="SignIn!.Password"></label>
            <span asp-validation-for="SignIn!.Password" class="text-danger text-sm-start"></span>
        </div>
        <a asp-controller="/Auth" asp-action="ForgotPassword">Forgot my password..</a>
        <div class="d-flex justify-content-end mt-3">
            <button class="btn btn-primary" type="submit">Sign In</button>
        </div>
    </form>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/auth/sign-in.css" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}