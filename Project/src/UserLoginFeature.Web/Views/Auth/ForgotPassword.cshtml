@using UserLoginFeature.Application.ViewModels;
@model AuthViewModel

@{
    ViewData["Title"] = "ForgotPassword";
}

<div class="container-sm container-forgotpassword mt-3 bg-body-tertiary rounded">
    <h4 class="mt-3 mb-3 text-center">Forgot Password</h4>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <form class="needs-validation pb-4" asp-controller="/Auth" asp-action="ResetPassword" method="post" novalidate>
        <div class="form-floating mb-3">
            <input asp-for="ResetPassword!.Email" type="email" class="form-control" placeholder="name@example.com">
            <label asp-for="ResetPassword!.Email"></label>
            <span asp-validation-for="ResetPassword!.Email" class="text-danger text-sm-start"></span>
        </div>
        <div class="d-flex justify-content-end">
            <button class="btn btn-primary" type="submit">Reset Password</button>
        </div>
    </form>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/auth/forgot-password.css" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}